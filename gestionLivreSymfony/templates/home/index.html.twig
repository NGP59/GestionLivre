{% extends 'base.html.twig' %}

{% block title %}Liste des livres
{% endblock %}

{% block stylesheets %}
	<link href="{{asset('assets/styles/style.css')}}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<header>
		<section>

			<nav class="navbar">
				<a href="{{path('app_home')}}">Liste des Livres</a>
				<a href="{{path('app_create')}}">Ajout Livre</a>
			</nav>
		</section>
	</header>

	<div class="example-wrapper">
		<h1>Liste des livres</h1>

		{% for book in allBooks %}
			<div>
				<a href="{{path('app_detail_book', {id:book.id})}}">
					<p>ISBN :
						{{ book.ISBN}}</p>
					<p>Title :{{ book.Titre}}</p>
					<p>Resume :
						{{ book.Resume}}</p>
					<p>Description :
						{{ book.Description}}</p>
					<p>Price :
						{{ book.Price}}</p>
				</a>
			</div>
			<hr>
		{% endfor %}
	</div>
{% endblock %}
