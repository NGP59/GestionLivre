{% extends 'base.html.twig' %}

{% block title %}Hello DetailBookController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<header>
		<section>

			<nav class="navbar">
				<a href="{{path('app_home')}}">Liste des Livres</a>
				<a href="{{path('app_create')}}">Ajout Livre</a>
			</nav>
		</section>
	</header>
	
	<div class="example-wrapper">
		<h1>Details du livre
			{{book.id}}</h1>

		{{book.getISBN}}
		{{book.Titre}}
		{{book.Resume}}
		{{book.Description}}
		{{book.price}}
	{% endblock %}
